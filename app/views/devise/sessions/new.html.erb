<<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <!-- Logo -->
    <div class="flex justify-center">
      <div class="w-12 h-12 rounded-lg gradient-navy-cyan flex items-center justify-center">
        <span class="text-white font-bold text-2xl">C</span>
      </div>
    </div>
    <h2 class="mt-6 text-center text-3xl font-bold" style="color: var(--navy-700)">
      Welcome back
    </h2>
    <p class="mt-2 text-center text-sm text-gray-600">
      Sign in to your account to continue
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow-xl rounded-xl sm:px-10">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "space-y-6") do |f| %>
        <!-- Email Field -->
        <div>
          <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.email_field :email, 
              autofocus: true,
              autocomplete: "email",
              placeholder: "Enter your email address",
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition-all duration-200" %>
        </div>

        <!-- Password Field -->
        <div>
          <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.password_field :password, 
              autocomplete: "current-password",
              placeholder: "Enter your password",
              class: "w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-cyan-500 focus:border-transparent transition-all duration-200" %>
        </div>

        <!-- Remember Me & Forgot Password -->
        <div class="flex items-center justify-between">
          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me, class: "h-4 w-4 text-cyan-600 focus:ring-cyan-500 border-gray-300 rounded" %>
              <%= f.label :remember_me, "Remember me", class: "ml-2 block text-sm text-gray-700" %>
            </div>
          <% else %>
            <div></div>
          <% end %>

          <div class="text-sm">
            <%= link_to "Forgot password?", new_password_path(resource_name), 
                class: "font-medium text-cyan-600 hover:text-cyan-500 transition-colors duration-200" %>
          </div>
        </div>

        <!-- Submit Button -->
        <div>
          <%= f.submit "Sign in", class: "w-full btn-primary text-center py-3 text-base font-medium" %>
        </div>
      <% end %>

      <!-- Links -->
      <div class="mt-6">
        <div class="relative">
          <div class="absolute inset-0 flex items-center">
            <div class="w-full border-t border-gray-300" />
          </div>
          <div class="relative flex justify-center text-sm">
            <span class="px-2 bg-white text-gray-500">Don't have an account?</span>
          </div>
        </div>

        <div class="mt-6">
          <%= link_to "Create account", new_registration_path(resource_name), 
              class: "w-full flex justify-center py-3 px-4 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 transition-colors duration-200" %>
        </div>
      </div>
    </div>
  </div>
</div>

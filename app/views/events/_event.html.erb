<div id="<%= dom_id event %>">
  <% if event.cover_image.attached? %>
    <div style="margin-bottom: 1rem;">
      <%= image_tag event.cover_image.variant(resize_to_limit: [400, 250]), 
                    alt: event.title, 
                    style: "width: 100%; max-width: 400px; height: 250px; object-fit: cover; border-radius: 8px;" %>
    </div>
  <% end %>
  
  <p>
    <strong>Title:</strong>
    <%= event.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= event.description %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= event.date %>
  </p>

  <% if event.category.present? %>
    <p>
      <strong>Category:</strong>
      <span class="badge bg-secondary"><%= event.category %></span>
    </p>
  <% end %>

  <p>
    <strong>Created by:</strong>
    <%= link_to (event.user.name.present? ? event.user.name : event.user.email), 
                user_path(event.user), 
                class: "text-blue-600 hover:text-blue-800" %>
  </p>

</div>

<%= form_with(model: event || Event.new, local: true ) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.textarea :description %>
  </div>

  <div>
    <%= form.label :date, style: "display: block" %>
    <%= form.datetime_field :date %>
  </div>

  <div>
    <%= form.label :category, style: "display: block" %>
    <%= form.select :category, options_for_select(Event::CATEGORIES.map { |c| [c, c] }, event&.category), 
                    { prompt: "Select a category" }, 
                    { class: "form-control" } %>
  </div>

  <div>
    <%= form.label :cover_image, style: "display: block" %>
    <%= form.file_field :cover_image, accept: "image/*" %>
    <% if event&.cover_image&.attached? %>
      <p>Current image: <%= event.cover_image.filename %></p>
      <%= image_tag event.cover_image.variant(resize_to_limit: [200, 150]), 
                    alt: "Event cover", 
                    style: "max-width: 200px; height: auto; border-radius: 8px;" %>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>

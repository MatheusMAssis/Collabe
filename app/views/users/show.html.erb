<div class="max-w-4xl mx-auto p-6">
  <div class="bg-white shadow-md rounded-lg p-6 mb-6">
    <div class="flex justify-between items-start mb-4">
      <div class="flex items-start space-x-4">
        <% if @user.profile_picture.attached? %>
          <%= image_tag @user.profile_picture.variant(resize_to_limit: [150, 150]), 
                        alt: "Profile picture", 
                        class: "w-20 h-20 object-cover rounded-full border-2 border-gray-200" %>
        <% else %>
          <div class="w-20 h-20 bg-gray-300 rounded-full flex items-center justify-center border-2 border-gray-200">
            <span class="text-2xl font-bold text-gray-600">
              <%= (@user.name.present? ? @user.name.first : @user.email.first).upcase %>
            </span>
          </div>
        <% end %>
        
        <div>
          <h1 class="text-3xl font-bold text-gray-800">
            <%= @user.name.present? ? @user.name : @user.email %>
          </h1>
          <p class="text-gray-600"><%= @user.email %></p>
        </div>
      </div>
      
      <% if current_user == @user %>
        <div>
          <%= link_to "Edit Profile", edit_user_path(@user), 
              class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        </div>
      <% end %>
    </div>

    <% if @user.bio.present? %>
      <div class="mb-6">
        <h2 class="text-xl font-semibold text-gray-700 mb-2">About</h2>
        <p class="text-gray-600 leading-relaxed"><%= simple_format(@user.bio) %></p>
      </div>
    <% end %>
  </div>

  <div class="bg-white shadow-md rounded-lg p-6">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">
      Events Created (<%= @events.count %>)
    </h2>

    <% if @events.any? %>
      <div class="grid gap-4">
        <% @events.each do |event| %>
          <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition-shadow">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-gray-800 mb-2">
                  <%= link_to event.title, event_path(event), 
                      class: "text-blue-600 hover:text-blue-800" %>
                </h3>
                <% if event.description.present? %>
                  <p class="text-gray-600 mb-2">
                    <%= truncate(event.description, length: 150) %>
                  </p>
                <% end %>
                <p class="text-sm text-gray-500">
                  <%= event.date.present? ? event.date.strftime("%B %d, %Y at %I:%M %p") : "Date TBD" %>
                </p>
              </div>
              
              <% if current_user == @user %>
                <div class="ml-4 flex space-x-2">
                  <%= link_to "Edit", edit_event_path(event), 
                      class: "text-blue-600 hover:text-blue-800 text-sm" %>
                  <%= link_to "Delete", event_path(event), 
                      data: { turbo_method: :delete, 
                              turbo_confirm: "Are you sure?" },
                      class: "text-red-600 hover:text-red-800 text-sm" %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">
        <% if current_user == @user %>
          You haven't created any events yet. 
          <%= link_to "Create your first event!", new_event_path, 
              class: "text-blue-600 hover:text-blue-800" %>
        <% else %>
          This user hasn't created any events yet.
        <% end %>
      </p>
    <% end %>
  </div>
</div>

<div class="max-w-2xl mx-auto p-6">
  <div class="bg-white shadow-md rounded-lg p-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-6">Edit Profile</h1>

    <%= form_with model: @user, local: true, class: "space-y-4" do |form| %>
      <% if @user.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <h4 class="font-bold"><%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:</h4>
          <ul class="list-disc list-inside">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :name, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="field">
        <%= form.label :bio, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :bio, 
            rows: 5,
            placeholder: "Tell us about yourself...",
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>

      <div class="field">
        <%= form.label :profile_picture, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.file_field :profile_picture, 
            accept: "image/*",
            class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        <% if @user.profile_picture.attached? %>
          <div class="mt-2">
            <p class="text-sm text-gray-600">Current profile picture:</p>
            <%= image_tag @user.profile_picture.variant(resize_to_limit: [150, 150]), 
                          alt: "Profile picture", 
                          class: "mt-2 w-24 h-24 object-cover rounded-full border-2 border-gray-200" %>
          </div>
        <% end %>
      </div>

      <div class="flex space-x-4">
        <%= form.submit "Update Profile", 
            class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded cursor-pointer" %>
        <%= link_to "Cancel", user_path(@user), 
            class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>
</div>
